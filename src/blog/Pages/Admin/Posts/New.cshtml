@page
@model NewModel

<h2 class="new-post-header">New Post</h2>

<form method="post">
    <div class="form-field">
        <label asp-for="Title" class="form-field__label hide" data-tooltip></label>
        <span asp-validation-for="Title" data-tooltip></span>
        <input asp-for="Title" class="form-field__input" placeholder="Title">
    </div>

    <div class="form-field">
        <label asp-for="Tags" class="form-field__label hide"></label>
        <span asp-validation-for="Tags" data-tooltip></span>
        <input asp-for="Tags" class="form-field__input" placeholder="Tags">
    </div>

    <div class="form-field">
        <span asp-validation-for="Body" data-tooltip></span>
        <textarea asp-for="Body" id="Body"></textarea>
    </div>

    <div>
        <button type="submit" asp-page-handler="publish" class="button">Publish</button>
        <button type="submit" asp-page-handler="save" class="button">Save Draft</button>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script src="~/lib/prism/prism.js"></script>
    <link rel="stylesheet" href="~/lib/prism/prism.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>

    <script>
        //Validate our original textarea, even though it is hidden
        $.validator.setDefaults({ ignore: null });

        var simplemde = new SimpleMDE({
            //Keep the original textarea in sync with the editor
            forceSync: true,

            //Add code snippet highlighting via prism.js
            previewRender: function(plainText, preview) {
                setTimeout(function() {
                    preview.innerHTML = this.parent.markdown(plainText);
                    Prism.highlightAll();
                }.bind(this), 1)
                return "Loading..."
            },
        });

        //Fire the validation on the original textarea
        //when the editor's content changes.
        //We use keyup to make sure the original textarea
        //is updated *before* we validate it
        $(".CodeMirror textarea").keyup(function() {
            $("#Body").valid();
        });
    </script>
}
